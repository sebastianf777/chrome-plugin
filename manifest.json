{
  "manifest_version": 3,
  "name": "Local Storage Cleaner",
  "version": "1.0",
  "description": "Clears local storage at scheduled intervals.",
  "permissions": ["storage", "scripting", "alarms", "tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }
]
}
